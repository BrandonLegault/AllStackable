{
  "schemaVersion": 1,
  "id": "allstackable",
  "version": "${version}",

  "name": "AllStackable",
  "description": "A highly customizable Fabric Mod that makes items stackable and allows you to change the stack size of them.",
  "authors": [
    "Conn_Lost"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/all-stackable/",
    "sources": "https://github.com/KrisCris/AllStackable"
  },

  "license": "GPL-3.0",
  "icon": "assets/allstackable/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "online.connlost.allstackable.AllStackableInit"
    ],
    "client": [
      "online.connlost.allstackable.client.AllStackableClientInit"
    ]
  },
  "mixins": [
    "allstackable.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": ">=1.19.4"
  },
  "suggests": {
    "flamingo": "*"
  }
}
